datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  id          Int      @id @default(autoincrement())
  text        String
  answer      String
  category_id Int
  category    Category @relation(fields: [category_id], references: [id])
  difficulty  String
  source      String
}

model Category {
  id       Int        @id @default(autoincrement())
  name     String
  value    String
  Question Question[]
}
